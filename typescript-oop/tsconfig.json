{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES2022",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "module": "ES2022"
    },
    "include": [
        "app/src/**/*"
    ]
}